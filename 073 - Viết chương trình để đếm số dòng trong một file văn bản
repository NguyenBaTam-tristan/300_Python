f = 'news.txt'
try:
    with open(f, 'r', encoding = 'utf-8') as file:
        lines = file.readlines()
        print(f'Số lượng dòng trong file: ',len(lines))
    
except FileNoFoundError:
    print(f'Không tìm thấy file: {news.txt}')
